<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.fau.cs.mad.smile_crypto" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name="de.fau.cs.mad.smile.android.encryption.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_smile_orange"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.fau.cs.mad.smile.android.encryption.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.fau.cs.mad.smile.android.encryption.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="de.fau.cs.mad.smile.android.encryption.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="de.fau.cs.mad.smile.android.encryption.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="de.fau.cs.mad.smile.android.encryption.ImportCertificateActivity"
            android:label="@string/title_activity_import_certificate">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.p12" />
                <data android:pathPattern=".*\\.crt" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.fau.cs.mad.smile.android.encryption.KeyChainActivity"
            android:label="@string/title_activity_key_chain" >
        </activity>
        <activity
            android:name="de.fau.cs.mad.smile.android.encryption.DecryptLocalMailActivity"
            android:label="@string/title_activity_decrypt_local_mail" >
        </activity>

        <service
            android:name="de.fau.cs.mad.smile.android.encryption.remote.SMimeService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote_api"
            tools:ignore="ExportedService" >
            <intent-filter>
                <action android:name="de.fau.cs.mad.ISMimeService" />
            </intent-filter>
        </service>
    </application>

</manifest>
