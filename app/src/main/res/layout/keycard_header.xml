<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_header_inner_simple_title"
        android:fontFamily="sans-serif"
        style="@style/card.header_simple_title"/>

    <ImageView
        android:id="@+id/publicKey"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_public_key_black_48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/privateKey"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_private_key_black_48dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/publicKey"
        android:visibility="gone"/>
</RelativeLayout>
